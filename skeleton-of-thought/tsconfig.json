{
	"compilerOptions": {
		"target": "es2022",
		"types": ["node"],
		"module": "node20",
		"outDir": "dist",
		"rootDir": "src",
		"baseUrl": ".",
		"strict": true,
		"esModuleInterop": true,
		"removeComments": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules", "dist"]
}